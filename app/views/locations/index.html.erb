<h1>Locations</h1>

<table class="table">

<% @locations.each do |location| %>
  <tr>
    <td><%= image_tag(location.image_url) %></td>
    <td><%= location.title %></td>
    <td><%= sanitize(location.description) %></td>
    <td><%= button_to 'Current Wait Time', current_waits_path(location_id: location), class: "btn btn-primary" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Location', new_location_path %>
